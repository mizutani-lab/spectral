% Packages
\usepackage{amsmath}
\usepackage{amsfonts}
\usepackage{amssymb}
\usepackage{amsthm}  % proof environment etc.
\usepackage{enumitem}  % adds label options to enumerate
\usepackage{fancyhdr}  % header
\usepackage{lastpage}  % retrieve the total number of pages
\usepackage{xspace}
\usepackage{bm}

% Layout
\usepackage[top=1in, bottom=1in, left=1in, right=1in]{geometry}
\setlength{\parindent}{0.0in}
\setlength{\parskip}{0.05in}

% Header
\pagestyle{fancy}
\headheight 35pt
\headsep 1.5em
\lhead{\student}
\chead{\textbf{\Large \doctitle}}
\rhead{\today}
\lfoot{}
\cfoot{\small \thepage/\pageref*{LastPage}}
\rfoot{}

% Hyperrefs
\usepackage{hyperref}
\hypersetup{
  colorlinks=true,
  linkcolor=blue,
  linkbordercolor={0 0 1}
}
\usepackage{cleveref}  % for cref

% Algorithms
\usepackage[ruled, vlined, linesnumbered, nofillcomment]{algorithm2e}
% taken from https://tex.stackexchange.com/questions/162207/algorithm2e-comment-style
\newcommand\commentstyle[1]{\footnotesize\ttfamily\textcolor{blue}{#1}}
\SetCommentSty{commentstyle}
\DontPrintSemicolon
\SetKwInOut{Input}{Input}
\SetKwInOut{Output}{Output}
\SetKwProg{Procedure}{Procedure}{}{}

% Math notation
\newcommand{\E}{\mathbb{E}}
\newcommand{\R}{\mathbb{R}}
\newcommand{\N}{\mathbb{N}}
\newcommand{\Z}{\mathbb{Z}}

% Theorem environments
\newtheorem{theorem}{Theorem}
\newtheorem{lemma}[theorem]{Lemma}
\newtheorem{definition}{Definition}
\newtheorem{proposition}{Proposition}
\newtheorem{corollary}{Corollary}
\newtheorem*{remark}{Remark}
\newtheorem*{claim}{Claim}
\newtheorem{exercise}{Exercise}

% Utilities
\newcommand{\yes}{\normalfont\textsf{Yes}\xspace}
\newcommand{\no}{\normalfont\textsf{No}\xspace}
